<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddmaduActivity"
    android:background="@drawable/bamadu">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/addvarmadu"/>

    <EditText
        android:id="@+id/edittxt2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/barmadu"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:ems="9"
        android:inputType="text"/>

    <RelativeLayout
        android:layout_below="@id/edittxt2"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/calp"
        android:layout_centerHorizontal="true">

        <EditText
            android:layout_marginLeft="130dp"
            android:id="@+id/edittxt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:textColor="#000"
            android:ems="3"
            android:inputType="numberDecimal"/>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rel1"
        android:layout_width="380dp"
        android:layout_height="230dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp">

    </RelativeLayout>

    <LinearLayout
        android:layout_below="@id/rel1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:weightSum="2">

        <ImageView
            android:id="@+id/ok"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:src="@drawable/ok"
            android:layout_centerHorizontal="true"/>

        <ImageView
            android:id="@+id/caser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/rel1"
            android:src="@drawable/caser"
            />

    </LinearLayout>

</RelativeLayout>