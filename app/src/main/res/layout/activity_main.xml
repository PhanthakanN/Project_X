
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/topbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/top_bar">
            </RelativeLayout>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bgname"
                android:layout_marginLeft="155dp" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="สวัสดีคุณ"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="66dp"
                android:textSize="35dp"
                android:textColor="#000"/>

            <TextView
                android:id="@+id/username_profile"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/profile_image"
                android:layout_marginTop="75dp"
                android:layout_marginLeft="47dp"
                android:textSize="30dp"
                android:ems="5"
                android:maxLines="1"
                android:textColor="#000"/>

            <ViewFlipper
                android:id="@+id/flipper"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_below="@id/topbar"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_fast_forward_black_24dp"/>

            <LinearLayout
                android:id="@+id/lin1"
                android:layout_below="@+id/flipper"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="3"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/food"
                    android:layout_width="110dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iconfood"
                    android:layout_weight="1"
                    android:background="@drawable/modernpattern"/>
                <ImageView
                    android:id="@+id/add"
                    android:layout_width="100dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iconma"
                    android:layout_weight="2"
                    android:background="@drawable/modernpattern"/>

                <ImageView
                    android:id="@+id/history"
                    android:layout_width="133dp"
                    android:layout_height="120dp"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:background="@drawable/modernpattern"
                    android:src="@drawable/iconhi" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin2"
                android:layout_below="@+id/lin1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/wttt"
                    android:layout_width="140dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/wt"
                    android:layout_weight="1"
                    android:background="@drawable/modernpattern"/>

                <ImageView
                    android:id="@+id/calpure"
                    android:layout_width="180dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:src="@drawable/iconcal"
                    android:layout_weight="1"
                    android:background="@drawable/modernpattern" />

            </LinearLayout>

            <ImageView
                android:id="@+id/exx"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/lin2"
                android:background="@drawable/ex"/>
            <ImageView
                android:id="@+id/num"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/exx"
                android:background="@drawable/num"/>

            <!--<TextView-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content" />-->

            <!--<Button-->
                <!--android:id="@+id/btn_logout"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:text=" Log out"-->
                <!--android:layout_centerHorizontal="true"-->
                <!--android:layout_centerVertical="true"/>-->
        </RelativeLayout>
    </LinearLayout>
</ScrollView>