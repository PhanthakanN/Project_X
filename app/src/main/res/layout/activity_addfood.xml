<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddfoodActivity"
    android:background="@drawable/bgadd">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/lfbar"/>

    <EditText
        android:id="@+id/edittxt1"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="@drawable/searchbar"
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:ems="9"
        android:inputType="text"/>

    <ImageView
        android:id="@+id/add"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/addmanu"
        android:layout_below="@+id/edittxt1"
        android:layout_centerHorizontal="true"/>

    <RelativeLayout
        android:layout_below="@id/add"
        android:layout_centerHorizontal="true"
        android:layout_width="370dp"
        android:layout_height="550dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/addbar"
            android:id="@+id/addbar"
            />

        <android.support.v7.widget.RecyclerView
            android:layout_below="@id/addbar"
            android:id="@+id/recadd"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            >

        </android.support.v7.widget.RecyclerView>

    </RelativeLayout>

</RelativeLayout>